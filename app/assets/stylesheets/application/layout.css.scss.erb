
@import "variables.css.scss";

.container {width:100%;overflow:hidden;}

div#page {
     width: $s-width; margin: 0 auto;

    div#session {
        width: $s-width; height: 25px;
        color: white;
        font-family: $f-session;
        font-size: 12px;
        background: url('/images/ui3/session.png') no-repeat;

        strong {font-weight:bold;}
    }

    div#center {
        width: $s-center; float: left;
        border-top: 6px solid black;
        margin-bottom: 30px;
     }

     div#sidebar {
        width: $s-sidebar; float: left;
        margin-left: 15px;
        border-top: 6px solid black;

        ul li {margin: 5px 0;}
        ul li h3:before {content: "\279C";}
     }

}

div#flash {
    margin-top: 5px;
    .notice {width: 100%; background-color: yellow; text-align: center; padding: 0 10px;}
}

div#session {
    width: 100%; overflow: hidden;
    margin: 10px 0 0 0;
    a {color: white;}
    .user {
        float: left;
        padding: 7px 0 0 20px;
    }

    .search {
        float: right; width: 271px; padding: 0; margin: 0;
        input[type=text] {
             background: transparent; margin: 0; border: 0;
            height: 20px; width: 170px;}
         input[type=text]:focus {outline: none;}
         input[type=submit] {margin-left: 25px; padding: 5px 0; font-family: $f-session;}
    }
}

div#go-camping {
    width: 100%; overflow: hidden;
    margin-top: 8px; margin-bottom: -32px;
    a {
        display: block; overflow: hidden; text-indent: -1000px;
        float: right;
    }
}


div#header {
    margin: 20px 0;
    a {display: block; height: 125px;}
    h1 {
        overflow: hidden; margin: 0;
        text-indent: -1000px;

    }
}

h2 {margin-top: 30px; font-size: 20px; margin-bottom:10px;}


div#sidebar {
    #sidecontent {
        div.buttons {
            margin-top: 8px;
            width: 336px; height: 145px;
            background: url('/images/ui3/sidebuttons.png') no-repeat;

            a {
                display: block; float: left; width: 166px;
                margin-top: 1px; height: 55px; padding-top: 6px;
                line-height: 54px;
                text-align: center; font-weight: bold; color: black;
                text-transform: uppercase;
             }
        }

        div.main {
            color: white;background-color: black;
            padding: 30px 20px;

            p {margin: 10px 0;}
            a {color: white; font-weight: bold;}
            h1 {margin-top: 0px;}
        }

        div.footer {
            width: $s-sidebar; height: 15px;
            background: url('/images/ui3/sidefooter.png') no-repeat;
        }
    }
}