<%= lists_div 2 do %>
    <%= render 'layouts/intro' %>
    <div class="list">
      <%= title 'Modificar lista' %>
      <%= simple_form_for book_list do |form| %>
          <%= form.input :name %>
          <%= button_submit_tag 'Guardar' %>
          <%= link_to 'Cancelar', (book_list.new_record? ? book_lists_path : book_list) %>
      <% end %>
    </div>
<% end %>