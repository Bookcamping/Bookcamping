<%= div_for book_list, :class => 'list' do %>
    <div class="nav">
      <%= link_to 'Modificar lista', edit_book_list_path if can? :edit, book_list %>
    </div>
    <h2><%= book_list.title %></h2>
    <div class="list_info">
      Por <%= link_to_user book_list.user %><span> hace <%= time_ago_in_words book_list.created_at %></span>
    </div>
    <ul class="books">
      <% book_list.books.each do |book| %>
          <li>
            <%= render_book book, :list %>
          </li>
      <% end %>
    </ul>
    <div class="actions add_book">
      <%= link_to 'AÃ±adir libro', new_book_list_book_path(book_list) if current_user %>
    </div>
<% end %>
