<div data-pjax-container>
  <div class="description"><%= markdown current_camp.description %></div>
  <%= image_tag 'dedo-vertical.png', id: 'dedo-vertical' %>
  <div class="curtain">
    <script src="http://widgets.twimg.com/j/2/widget.js"></script>
    <script>
        new TWTR.Widget({
            version:2,
            type:'profile',
            rpp:4,
            interval:30000,
            width:336,
            height:300,
            theme:{
                shell:{
                    background:'#000000',
                    color:'#ffffff'
                },
                tweets:{
                    background:'#333333',
                    color:'#ffffff',
                    links:'#ffea00'
                }
            },
            features:{
                scrollbar:false,
                loop:false,
                live:false,
                behavior:'all'
            }
        }).render().setUser('bookcamping').start();
    </script>
    <div class="bottom">&nbsp;</div>
  </div>
</div>

