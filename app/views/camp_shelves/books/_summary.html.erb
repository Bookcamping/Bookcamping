<%= div_for book, class: 'summary' do %>
    <% present book do |presenter| -%>
        <%= link_to 'Ver ficha completa', book, class: 'go-book' %>
        <div class="info">
          <h1><%= presenter.linked_title %></h1>
          <%= presenter.license_icon %>
          <%= presenter.date %>
          <%= presenter.authors %>
          <% if book.editor.present? %>
              / <%= presenter.editor %>
          <% end %>
        </div>
        <%= presenter.user('Subido por ') %>
        <div class="description">
          <%= presenter.description %>
        </div>
        <% if presenter.download_visible? %>
            <div class="download_url">
              <%= presenter.download_link %>
            </div>
        <% end %>
        <%= presenter.media %>
    <% end %>
<% end %>
