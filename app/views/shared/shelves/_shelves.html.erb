<table class="shelves">
  <% shelves.each do |shelf| %>
      <% link = book ? [shelf, book] : shelf %>
      <tr class="spacer">
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
      <tr class="shelf" style="background-color: <%= shelf.background %>;">
        <td class="main">
          <span class="name"><%= link_to shelf.name, link %></span>
          <% if shelf.type == 'CampShelf' %>
              <span class="user">#<%= link_to shelf.camp.name %></span>

          <% else %>
              <span class="user">Por&nbsp;<%= link_to shelf.user.name, shelf.user %></span>
          <% end %>
              
        </td>
        <td class="count">
          <%= link_to link do %>
              <%= shelf.books_count %>
              <br/>
              <%= current_model %>s
          <% end %>
        </td>
      </tr>
  <% end %>
</table>
