<% content_for :browser do %>
    <% if shelf %>
        <%= render shelf %>
    <% else %>
        <h1>ESTE <%= current_model.upcase %> EST√Å EN</h1>
        <ul class="shelves items">
          <% book.shelves.each do |shelf| %>
              <li class="shelf item">
                <h2><%= link_to shelf.name, [shelf, book] %> (<%= shelf.books_count %>)</h2>
                <span class="info">Por <%= link_to shelf.user.name, shelf.user %></span>
              </li>
          <% end %>
        </ul>
    <% end %>
<% end %>

<% title book.title %>
<%= render_book book %>
