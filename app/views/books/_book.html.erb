<%= div_for book do %>
    <div class="info">
      <%= content_tag :h3, link_to(book.title, book) if book.title.present? %>
      <%= content_tag :span, book.authors, :class => 'authors' if book.authors.present? %>
      <% if book.editor.present?  %>
          / <%= content_tag :span, book.editor, :class => 'editor' %>
      <% end %>
    </div>
    <div class="description">
      <%= render_description book %>
    </div>
    <%= content_tag :div, link_to(book.url, book.url), :class => 'book_url' if book.url.present? %>
    <div class="controls">
      <span class="user"><%= link_to book.user.name, book.user if book.user %></span>
      <span class="time">hace <%= time_ago_in_words book.created_at %></span>
      <% if ctx == :book %>
          <span class="comment_count"><%= t('.comments_count', :count => book.comments_count) %></span>
          <%= link_to 'Permalink', book %>
      <% else %>
          <%= link_to t('.comments_count', :count => book.comments_count), book %>
          <%= link_to 'Permalink', book %>
          <%= link_to 'Editar', edit_book_path(book) if can? :edit, book %>
      <% end %>
      <%= link_to 'Tweet', '#' if current_user %>
    </div>
    <%= render_comments(book.comments, Comment.new(:resource => book)) if ctx == :book %>
<% end %>