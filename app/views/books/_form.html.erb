<%= simple_form_for [shelf, book] do |form| %>
    <%= form.input :title %>
    <%= form.input :authors %>
    <%= form.input :editor %>
    <%= form.input :date %>
    <%= form.association :license %>
    <%= form.input :url %>
    <%= form.input :media %>
    <%= form.input :description, :as => :text %>
    <%= form.association :user if current_user? :super %>
      <%= button_submit_tag 'Guardar' %>
      <%= link_to 'Cancelar', book.new_record? ? root_path : book %>
<% end %>
