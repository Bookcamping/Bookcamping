<%= simple_form_for [shelf, book] do |form| %>
    <%= form.input :title %>
    <%= form.input :authors %>
    <%= form.input :editor %>
    <%= form.input :date %>
    <%= form.input(:initial_shelf, :collection => shelves, :include_blank => false) if book.new_record? %>
    <%= form.association :license, :include_blank => false %>
    <%= form.input :url %>
    <%= form.input :media %>
    <%= form.input :description, :as => :text %>
    <%= form.association :user if current_user? :super %>
    <%= form.submit 'Guardar' %>
<% end %>
