<%= simple_form_for book do |form| %>
    <% if book.new_record? %>
        <%= form.input :include_in_shelf_id, :collection => current_camp.shelves, :include_blank => false %>
    <% end %>
    <%= form.input :title %>
    <%= form.input :authors %>
    <%= form.input :editor %>
    <%= form.input :date %>
    <%= form.association :license, :include_blank => false %>
    <%= form.input :url %>
    <%= form.input :media %>
    <%= form.input :description, :as => :text %>
    <%= form.association :user if current_user? :super %>
    <%= form.submit 'Guardar' %>
<% end %>
