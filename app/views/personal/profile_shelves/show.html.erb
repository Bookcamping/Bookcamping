
<% title shelf.name %>

<%= div_for shelf, class: 'shelf' do %>
    <div class="info">
      <div class="count" >
        <%= shelf.books_count %><br/>
        <%= current_model %>s
      </div>
      <div class="controls">
      </div>
      <h1 class='big'><%= shelf.name %></h1>
    </div>
    <div class="actions">
      <%= link_to 'Volver', personal_user_shelves_path, :class => 'back' %>
    </div>
    <%= render_books shelf.books, shelf.background, shelf %>
<% end %>