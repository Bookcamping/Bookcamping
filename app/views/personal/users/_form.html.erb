<%= simple_form_for(user, url: personal_user_path) do |form| %>
    <%= form.input :name %>
    <%= form.input :email %>
    <% if user.new_record? %>
      <%= form.input :password %>
      <%= form.input :password_confirmation %>
    <% end %>
    <%= form.input :twitter %>
    <%= form.input :description, as: :text, row: 2 %>
    <%= form.submit 'Guardar perfil', id: 'submit_user' %>
<% end %>