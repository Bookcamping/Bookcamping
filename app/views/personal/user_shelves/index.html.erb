<table class="shelves">
  <% profile_shelves.each do |shelf| %>
      <tr class="spacer">
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
      <tr class="shelf" style="background-color: <%= shelf.background %>;">
