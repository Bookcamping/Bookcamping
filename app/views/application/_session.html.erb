<div id="session">
  <div class="user">
    <% if current_user %>
      <%= content_tag(:div, current_user.id, :id => 'user-id', :style => 'display:none;') %>
      <%= avatar_image current_user, :micro %> 
      <%= link_to "¡Hola #{truncate(current_user.name)}!", current_user, rel: 'current-user' %>
    <% else %>
      <%= link_to 'Entrar', login_path(from: request.fullpath), rel: 'nofollow' %>
    <% end %>
  </div>

  <div class="tabs">
    <%= link_to 'Cómo se hace', '/como', class: 'double' %>
    <%#= link_to 'Wiki', pages_path %>
    <%= link_to 'Blog', 'http://blog.bookcamping.cc' %>
    <%#= link_to 'Visitas guiadas', '/visitas', class: 'double' %>
    <%#= link_to 'Somos', users_path %>
    <%= link_to 'Listas', user_shelves_path %>
    <%= link_to 'Estantes', camp_shelves_path %>
  </div>
  <div class="search">
    <%= form_tag '/buscar' do %>
      <%= text_field_tag :term %>
      <%= submit_tag 'BUSCAR', id: 'submit-search', name: 'search' %>
    <% end %>
  </div>
</div>
