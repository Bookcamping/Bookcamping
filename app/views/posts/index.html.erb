<div id="posts">
  <% if can? :manage, Post %>
      <div class="actions">
        <%= link_to 'Crear entrada', new_post_path %>
      </div>
  <% end %>

  <% posts.each do |post| %>
      <%= div_for post, class: post.visibility do %>
          <div class="visibility"><%= t"post.visibilities.#{post.visibility}" if current_user? :admin %></div>
          <h2><%= link_to post.title, post %></h2>

          <div class="author">Por <%= post.author %></div>
          <div class="body summary"><%= markdown post.body, 200 %></div>
          <div class="actions">
            <%= link_to 'leer mÃ¡s...', post, class: 'read_more' %>
            <% if can? :edit, post %>
                <%= link_to 'editar', [:edit, post], class: 'read_more' %>
            <% end %>
          </div>
      <% end %>
  <% end %>
</div>