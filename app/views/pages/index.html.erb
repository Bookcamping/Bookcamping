<div class="header">
  <%= title 'Wiki #bookcamping' %>
  <div class="actions">
    <%=  link_to 'Añadir página', [:new, :page] if can? :manage, Page %>
  </div>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Código</th>
    <th>Título</th>
    <th>Autora(s)</th>
    <th>Última modificación</th>
  </tr>
  </thead>
  <tbody>
  <% pages.each do |page| %>
  <tr>
    <td>@[<%= page.id %>]</td>
    <td><%= link_to page.title, page %></td>
    <td><%= link_to page.author %></td>
    <td>hace <%= time_ago_in_words page.updated_at %></td>
    <td class="actions">
      <%= link_to 'Editar', [:edit, page] if can? :edit, page %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>