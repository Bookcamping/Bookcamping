    <%= link_to 'Editar', [:edit, license] if can? :edit, license %>
    <%= link_to 'Borrar', license, method: :delete, class: 'warning',
                confirm: "Â¿Borrar esta licencia?" if can?(:destroy, license) and license.references.count == 0 %>
