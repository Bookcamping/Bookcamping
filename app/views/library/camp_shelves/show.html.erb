<% title camp_shelf.name %>
<%= content_for(:sidebar) { render 'sidebar' } %>

<%= div_for camp_shelf, class: 'shelf' do %>
    <%= render_shelf_header camp_shelf %>

    <div class="actions">
      <%= link_to 'Volver', camp_shelves_path, :class => 'back' %>
    </div>
    <div class="books container">
      <% camp_shelf.books.each do |book| %>
          <%= render_book_item book, [camp_shelf, book], camp_shelf.background %>
      <% end %>
    </div>
<% end %>



