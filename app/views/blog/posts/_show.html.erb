<% present post do |presenter| %>
    <%= div_for post, class: post.visibility do %>
        <% cache [:body, post] do %>
            <div class="body"><%= presenter.body %></div>
        <% end %>
        <br/>
        <br/>
        <%= render 'shared/social/social' %>
        <%= render_comments post.comments, Comment.new(resource: post) %>
    <% end %>
<% end %>
