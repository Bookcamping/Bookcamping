  <%= div_for reference, style: "background-color: #{background_color};",
  class: reference.ref_type do %>
  <div class="content">
    <div class="emblems">
      <%= license_type_icon reference %>
      <%= image_tag('download-arrow.png', :class => 'download') if reference.url.present? %>
    </div>
    <div class="cover-icon">
      <h3>
        <%= link_to reference.title, [shelf, reference].compact, 
          data: {pjax: '[data-pjax-container]'} %>
      </h3>
      <%= reference.date %> <%= reference.authors %> <%= reference.editor %>
    </div>
  </div>
<% end %>
