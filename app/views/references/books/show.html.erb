<% title book.title %>

<%= div_for book do %>
  <% present book do |book_presenter| -%>
    <div class="book_info row">
      <h1><%= book_presenter.linked_title %></h1>
      <%= book_presenter.license_icon %>
      <%= book_presenter.date %>
      <%= book_presenter.authors %>
      <% if book.editor.present? %>
        / <%= book_presenter.editor %>
    <% end %>
    <%= book_presenter.user %>
  </div>
  <div class="actions">
    <%= link_to 'Editar', edit_book_path(book) if can? :edit, book %>
    <%= link_to 'Gestionar listas', [book, :shelf_items], class: 'beta' if can? :edit, book %>
  </div>
  <%= beta_div do %>
    <div class="tags">
      <h3>Tags</h3>
      <%= form_tag book_taggings_path(book) do %>
        <%= text_field_tag :tag_name %>
        <%= submit_tag 'AÃ±adir tag', id: 'submit_add_tag' %>
      <% end %>
      <% book.taggings.each do |tagging| %>
        <%= div_for tagging do %>
          <%= link_to tagging.tag.name, tagging.tag %>
          <%= link_to 'x', [book, tagging], class: 'destroy', method: :delete,
            confirm: "Â¿Quieres quitar la etiqueta #{tagging.tag.name}?" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <div class="content row">
    <div class="left media">
      <%= book_presenter.media %>
    </div>
    <div class="right">
      <div class="description">
        <%= book_presenter.description %>
      </div>
    </div>
  </div>
  <div class="content row">
    <% if book_presenter.download_visible? %>
      <div class="download_url">
        <%= book_presenter.download_link %>
      </div>
    <% end %>
  </div>
  <div class="camp_shelves row">
    <%= book_presenter.camp_shelves %>
  </div>
  <div class="social row">
    <%= book_presenter.social %>
  </div>
  <div class="comments row">
    <%= book_presenter.comments %>
  </div>
<% end %>
<% end %>
