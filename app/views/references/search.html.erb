<% present  search.results,
  {background_color: '#AAA'}, ReferencesPresenter do |presenter| %>
  <% if search.term.blank? %>
    <div class="header">
      <%= title 'Buscar referencias' %>
    </div>
    <%= form_tag '/buscar', method: :get do %>
      <%= text_field_tag :term %>
      <%= submit_tag 'Buscar' %>
    <% end %>
  <% else %>
    <div class="header">
      <%= title "Buscar '#{search.term}'" %>
      <div class="properties">
        <%= presenter.size %> referencias encontradas.
      </div>
    </div>
    <div class="actions">
      <%= link_to 'Seleccionar referencias', '#', class: 'select-references' if current_user? %>
    </div>
    <% if search.error %>
      <span class="error"><%= search.error %></span>
    <% end %>
    <%= presenter.render %>
  <% end %>

<% end %>

