    <div class="info">
      <div class="count" style="background-color: <%= shelf.background %>;">
        <%= shelf.books_count %><br/>
        <%= current_model %>s
      </div>
      <div class="controls">
        <%= link_to "AÃ±adir #{current_model}", new_book_path, :class => 'add' %>
        <%= link_to 'Volver', shelves_path, :class => 'back' %>
      </div>
      <%= title shelf.name %>
      Creada por <%= shelf.user.name %> y modificada hace <%= time_ago_in_words shelf.updated_at %>
