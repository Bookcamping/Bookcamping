<%= div_for shelf do %>
    <div class="info">
      <div class="count" >
        <%= shelf.books_count %><br/>
        <%= current_model %>s
      </div>
      <div class="controls">
        <%#= link_to "Añadir #{current_model}", new_book_path, :class => 'add' %>

      </div>
      <h1><%= link_to_unless_current shelf.name, shelf %></h1>
      Creada por <%= shelf.user.name %> y modificada hace <%= time_ago_in_words shelf.updated_at %>
    </div>
    <div class="actions">
      <%= link_to 'Volver', shelves_path, :class => 'back' %>
      <%#= link_to "Añadir #{current_model}", new_shelf_book_path(shelf) %>
      <%= link_to 'Editar', [:edit, shelf] if can? :edit, shelf %>
      <%= link_to 'Borrar', shelf, :method => :delete,
                  :confirm => "¿Estas segura de borrar la lista '#{shelf.name}'?" if can? :destroy, shelf %>
    </div>
    <%= render_books shelf.books, shelf.background, shelf %>
<% end %>