<%= simple_form_for shelf do |form| %>
    <%= form.input :name %>
    <%= form.input :description %>
    <%= form.input :color  %>
    <p>Colores de ejemplo: <%= Shelf::COLORS.join(' ') %></p>
    <%= form.input :slug if current_user? :admin %>
    <%= form.association :user if current_user? :super %>
    <%=form.submit 'Guardar' %>
<% end %>