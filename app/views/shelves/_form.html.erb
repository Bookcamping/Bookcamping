<%= simple_form_for shelf do |form| %>
    <%= form.input :name %>
    <%= form.input :color, :collection => Shelf::COLORS, :include_blank => false %>
    <%= form.input :slug if current_user? :admin %>
    <%= form.association :user if current_user? :super %>
    <%=form.submit 'Guardar' %>
<% end %>