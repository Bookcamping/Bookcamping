<div class="list">
  <h2>LISTAS</h2>

  <div class="actions">
    <%= button_group do %>
        <%= add_button_link_to t('.add_shelf'), new_shelf_path if can? :create, Shelf %>
    <% end %>
  </div>
  <ul class="shelves">
    <% shelves.each do |shelf| %>
        <li><%= link_to shelf.name, shelf %> <span class="info">(<%= shelf.books_count %>)
        Por <%= link_to shelf.user.name, shelf.user %></span></li>
    <% end %>
  </ul>
</div>