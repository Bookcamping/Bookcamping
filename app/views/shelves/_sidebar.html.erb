<%= content_for :sidebar do %>
  <div data-pjax-container>
    <% if shelf.description? && shelf.render_mode == 'icons' %>
      <h2><%= shelf.name %></h2>
      <div class="description">
        <%= markdown shelf.description %>
      </div>
      <%= image_tag 'dedo-vertical.png', id: 'dedo-vertical' %>
    <% end %>
  </div>
<% end %>
