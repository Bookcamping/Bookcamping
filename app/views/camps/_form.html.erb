<%= simple_form_for camp do |form| %>
    <%= form.input :name %>
    <%= form.input :slug %>
    <%= form.input :host %>
    <%= form.input :group_id, collection: User.groups %>
    <%= form.input :description, as: :text %>
    <%= form.input :lang %>
    <%= form.input :lock_camp_shelves, as: :boolean %>
    <%= form.input :has_blog, as: :boolean %>
    <%= form.input :show_media_on_lists %>
    <%= form.submit %>
<% end %>

<%= content_for :sidebar do %>
    <%= render 'markdown' %>
<% end %>

<%= simple_debug camp.errors %>
