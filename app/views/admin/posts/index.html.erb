<%= admin_title resource_class %>

<div class="pagination">
  <%= paginate collection %>
</div>
<div id="posts">
  <% collection.each do |post| %>
      <%= div_for post do %>
          <h3><%= post.title %>
            <small><%= post.visibility %></small>
          </h3>
          <div class="body"><%= markdown post.body, 100 %></div>
          <div class="links">
            <%= link_to 'Ver en la web', post %> |
            <%= link_to 'Editar', [:edit, :admin, post] %> |
            <%= link_to 'Borrar', [:edit, :admin, post] %>
          </div>
      <% end %>
  <% end %>
</div>
