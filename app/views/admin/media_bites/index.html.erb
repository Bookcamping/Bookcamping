
<div class="actions">
  <%= link_to '+ Añadir/subir media', new_admin_media_bite_path %>
</div>

<%= admin_title resource_class, "Media 'jammin" %>

<div id="media_bites">
  <% @media_bites.each do |media_bite| %>
      <%= div_for media_bite do %>
          <h1><%= media_bite.title %>
            <small></small>
          </h1>
          <% if media_bite.image_file? %>
              <%= image_tag media_bite.file_content_url(:thumb), class: 'thumb' %>
          <% end %>
          <h2>Corta y pega en el post: <%= media_bite.inline_code %></h2>
          <span class="file"><%= media_bite.file_content %></span>
          <span class="url"><%= media_bite.url_content %></span>
          <div class="links">
            <%= link_to 'Editar', [:edit, :admin, media_bite] %> |
            <%= link_to 'Borrar', [:admin, media_bite], method: :delete,
            confirm: "Borrar '#{media_bite.title}' ¿Estás segura? No se puede deshacer"%>
          </div>
      <% end %>
  <% end %>
</div>