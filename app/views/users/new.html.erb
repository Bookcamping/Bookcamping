<% if current_user.present? %>
  <div class="header">
    <%= title 'Crear un colectivo' %>
    <%= link_to 'Volver', current_user, class: 'back' %>
  </div>
  <%= simple_form_for user do |form| %>
    <%= form.input :name %>
    <%= form.input :email %>
    <%= form.submit 'Crear colectivo' %>
  <% end %>
<% else %>
  <div class="header">
    <%= title 'Darse de alta' %>
    <div class="actions">
      <%= link_to 'Volver', login_path, class: 'back' %>
    </div>
  </div>

  <%= simple_form_for user do |form| %>
    <%= form.input :name %>
    <%= form.input :email %>
    <%= form.input :password, required: true %>
    <%= form.input :password_confirmation, required: true %>
    <%= form.input :twitter %>
    <%= form.input :description, as: :text %>
    <%= form.input :uid_twitter, as: :hidden %>
    <%= form.input :uid_facebook, as: :hidden %>
    <%= form.input :uid_google, as: :hidden  %>
    <%= form.submit 'Darse de alta' %>
  <% end %>
<% end %>
<%= simple_debug user.errors %>

