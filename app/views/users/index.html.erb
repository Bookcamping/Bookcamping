<div class="header">
  <div class="count"><%= user_count %></div>
  <%= title '#bookcamping somos' %>
</div>

<%= form_tag search_users_path, method: :get, class: 'search_users' do %>
    Buscar colaboradoras: <%= text_field_tag :term %>
<% end %>

<div class="users">
  <% users.each do |user| %>
      <%= div_for user do %>
          <div class="avatar"><%= link_to avatar_image(user), user %></div>
          <div class="name">
            <%= link_to user.name, user %>
          </div>
      <% end %>
  <% end %>
</div>