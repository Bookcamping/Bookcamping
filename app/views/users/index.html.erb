<% title 'Colaboradoxs #bookcamping' %>
<h1>Colaboradorxs #bookcamping
  <small><%= users.count %></small>
</h1>

<%= form_tag search_users_path, method: :get, class: 'search_users' do %>
    Buscar colaboradoras: <%= text_field_tag :term %>
<% end %>

<div class="users">
  <% users.each do |user| %>
      <%= div_for user do %>
          <div class="avatar">&nbsp;</div>
          <div class="name">
            <%= link_to user.name, user %>
          </div>
      <% end %>
  <% end %>
</div>