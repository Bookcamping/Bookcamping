<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %> <%= current_camp.name %> </title>
  <link rel="Shortcut Icon" href="/assets/ui3/<%= current_camp.name %>-mini.ico" type="image/x-icon"/>

  <link href='http://fonts.googleapis.com/css?family=Kreon:light,bold&v1' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Cousine&v1' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag "application" %>
  <!--link href="/iconic.css" media="screen" rel="stylesheet" type="text/css"/-->
  <%= csrf_meta_tags %>
</head>
<body>
<div id="page">
  <div id="flash">
    <%= content_tag :span, flash[:notice], :class => 'notice' if flash[:notice].present? %>&nbsp;
  </div>


  <div id="session">
    <div class="user">
      <% if current_user %>
          <%= content_tag(:div, current_user.id, :id => 'user-id', :style => 'display:none;') %>
          Hola <%= current_user.name %>!
          <%= link_to "Salir", signout_path %>
          <% if current_user.super? %>
              <%= link_to current_camp.subdomain, [:edit, current_camp] if current_user.super? %>
          <% end %>
      <% else %>
          Entrar
          con: <%= link_to "Twitter", "/auth/twitter" %> <%= link_to "Google", "/auth/google" %> <%= link_to "Facebook", "/auth/facebook" %>
      <% end %>
    </div>
    <div class="search">
      <%= form_tag '/buscar' do %>
          <%= text_field_tag :term %>
          <%= submit_tag 'BUSCAR' %>
      <% end %>
    </div>
  </div>

  <div id="go-camping">
    <% if current_camp.name == 'bookcamping' %>
        <%= link_to 'videocamping', 'http://videocamping.cc', :class => 'go-videocamping' %>
    <% else %>
        <%= link_to 'bookcamping', 'http://bookcamping.cc', :class => 'go-bookcamping' %>
    <% end %>
  </div>
  <div id="header">
    <a href="/">
      <h1 id="logo" style="background-image: url('/assets/ui3/<%= current_camp.name %>.png')"><%= current_camp.name[1..-1] %></h1>
    </a>
  </div>
  <div id="main">
    <div class="container">
      <div id="center">
        <%= yield %>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>

    </div>
  </div>
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.js"></script>
<script>window.jQuery || document.write('<script src="/js/jquery.js">\x3C/script>')</script>
<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js"></script>
<%= javascript_include_tag "application" %>

<script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-11032039-5']);
    _gaq.push(['_setDomainName', '.bookcamp.cc']);
    _gaq.push(['_setAllowHash', 'false']);
    _gaq.push(['_trackPageview']);

    (function() {
        var ga = document.createElement('script');
        ga.type = 'text/javascript';
        ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(ga, s);
    })();

</script>

<div style="display:none">GoCamping 2011/06/15</div>
</body>
</html>
