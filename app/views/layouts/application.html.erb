<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %> :: <%= current_camp.name %> </title>
  <link rel="Shortcut Icon" href="/images/ui3/<%= current_camp.name %>-mini.ico" type="image/x-icon"/>

  <link href='http://fonts.googleapis.com/css?family=Kreon:light,bold&v1' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Cousine&v1' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag "application" %>
  <!--link href="/iconic.css" media="screen" rel="stylesheet" type="text/css"/-->
  <%= csrf_meta_tags %>
</head>
<body>
<div id="page">
  <div id="notices">

  </div>
  <div id="flash">
    <%= content_tag :span, flash[:notice], :class => 'notice' if flash[:notice].present? %>&nbsp;
  </div>


  <div id="session">
    <div class="user">
      <% if current_user %>
          <%= content_tag(:div, current_user.id, :id => 'user-id', :style => 'display:none;') %>
          Hola <%= current_user.name %>!
          <%= link_to 'EstanterÃ­as', personal_user_shelves_path %> |
          <%= link_to 'Mi biblioteca', personal_books_path %> |
          <%= link_to 'Perfil', personal_user_path %> >
          <%= link_to "Salir", signout_path(:from => request.fullpath) %>
      <% else %>
          Entrar
          con:
          <%= link_to "Twitter", login_path('twitter', :from => request.fullpath) %>
          <%= link_to "Google", login_path('google', :from => request.fullpath) %>
          <%= link_to "Facebook", login_path('facebook', :from => request.fullpath) %>
      <% end %>
    </div>
    <div class="search">
      <%= form_tag '/buscar' do %>
          <%= text_field_tag :term %>
          <%= submit_tag 'BUSCAR' %>
      <% end %>
    </div>
  </div>

  <div id="go-camping">
    <% if current_camp.name == 'bookcamping' %>
        <%= link_to 'videocamping', 'http://videocamping.cc', :class => 'go-videocamping' %>
    <% else %>
        <%= link_to 'bookcamping', 'http://bookcamping.cc', :class => 'go-bookcamping' %>
    <% end %>
  </div>
  <div id="header">
    <a href="/">
      <h1 id="logo" class="logo-<%= current_camp.name %>"><%= current_camp.name %></h1>
    </a>
  </div>
  <div id="main">
    <div class="container">
      <div id="center">
        <%= yield %>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
        <div id="goteo" name="goteo">
          <iframe frameborder="0" height="480px" src="http://www.goteo.org/widget/project/bookcamping?lang=es" width="250px" scrolling="no"></iframe>
        </div>
        <%= link_to image_tag('/images/blog.png', alt: 'Blog bookcamping'), '/blog', id: 'go-blog' if current_camp.id == 1 %>
        <%= link_to image_tag('/images/mapa-mini4.jpg', alt: 'Mapa bookcamping'), '/mapa', id: 'go-map' if current_camp.id == 1 %>
      </div>

    </div>
  </div>
</div>
