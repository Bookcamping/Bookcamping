<% title user.name %>

<% present user, {count: "#{shelves.size} listas" } do |presenter| -%>
  <%= presenter.header %>
<% end %>

<table class="shelves">
  <% shelves.each do |shelf| %>
    <% shelf_url = shelf.type == 'CampShelf' ? [shelf] : [user, shelf] %>
    <%= render_shelf shelf, shelf_url %>
  <% end %>
</table>

